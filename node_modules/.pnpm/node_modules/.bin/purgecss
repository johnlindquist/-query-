#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/Users/johnlindquist/projects/{query}/node_modules/.pnpm/registry.npmjs.org/purgecss/1.4.2/node_modules/purgecss/bin/purgecss/node_modules:/Users/johnlindquist/projects/{query}/node_modules/.pnpm/registry.npmjs.org/purgecss/1.4.2/node_modules/purgecss/bin/node_modules:/Users/johnlindquist/projects/{query}/node_modules/.pnpm/registry.npmjs.org/purgecss/1.4.2/node_modules/purgecss/node_modules:/Users/johnlindquist/projects/{query}/node_modules/.pnpm/registry.npmjs.org/purgecss/1.4.2/node_modules:/Users/johnlindquist/projects/{query}/node_modules/.pnpm/registry.npmjs.org/purgecss/node_modules:/Users/johnlindquist/projects/{query}/node_modules/.pnpm/registry.npmjs.org/node_modules:/Users/johnlindquist/projects/{query}/node_modules/.pnpm/node_modules:/Users/johnlindquist/projects/{query}/node_modules:/Users/johnlindquist/projects/node_modules:/Users/johnlindquist/node_modules:/Users/node_modules:/node_modules:/Users/johnlindquist/projects/{query}/node_modules/.pnpm/node_modules/purgecss/bin/purgecss/node_modules:/Users/johnlindquist/projects/{query}/node_modules/.pnpm/node_modules/purgecss/bin/node_modules:/Users/johnlindquist/projects/{query}/node_modules/.pnpm/node_modules/purgecss/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../purgecss/bin/purgecss" "$@"
else 
  exec node  "$basedir/../purgecss/bin/purgecss" "$@"
fi
